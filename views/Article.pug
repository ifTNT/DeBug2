    // pt-3 pl-5 pr-5 mb-2
    h1 DeBug2
    .btn-group.m-2
      button.btn.btn-danger.dropdown-toggle.user_id(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
        | #{user_id}
      .dropdown-menu
        a.dropdown-item.person_info(href='user_info') Personal information
        .dropdown-divider
        a.dropdown-item.sign_out(href='sign_out') Sign out
section(style='width:60%;margin:80px 20% 0 20%')
  .articleWrap
    .action(style='text-align: right;')
      button.btn.btn-outline-primary.update_article.mb-2.mr-2(type='button')  Update
      button.btn.btn-outline-dark.delete_article.mb-2(type='button')  delete
    .articleHeader.d-flex.align-items-start.flex-column.mb-3
      .articleTitle.p-2
        h3
          | Title:
          span #{title}
