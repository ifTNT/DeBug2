head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  script(src=' https://code.jquery.com/jquery-3.1.1.min.js')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  title Sign up
header(style='height: 100px;width:60%;;margin-left: 20%;margin-right: 20%;')
  .fixed-top.bg-dark(style='display:block;')
    nav.d-flex.justify-content-between.text-white(style='width:60%;height:100%;margin-left: 20%;margin-right: 20%;')
      // pt-3 pl-5 pr-5 mb-2
      h1(onclick="javascript:location.href='/'") DeBug2
section.pt-5(style='height: 100%;width:60%;;margin-left: 20%;margin-right: 20%;text-align: center; ')
  p(style='color: gray;font-size:13px;')  Please input some information to register 
  form.pt-3(style='height: 100%;width:40%;;margin-left: 30%;margin-right: 30%;')
    .form-group
      label(for='exampleInputEmail1') UserID
      input#userid.form-control(type='userid' aria-describedby='useridHelp' placeholder='Enter UserID')
    .form-group
      label(for='exampleInputPassword1') Password
      input#Password1.form-control(type='password' placeholder='Password')
    .form-group
      label(for='exampleInputPassword2') Check Password
      input#Password2.form-control(type='password' placeholder='PasswordCheck')
    .form-group
      label(for='exampleNickName1') Nickname
      input#NickName.form-control(type='nickname' placeholder='Nickname')
    p#alert(style='display:none;color:red') This UserID has been used.
    button.btn.btn-primary.submit(type='button') Submit
// Optional JavaScript
// jQuery first, then Popper.js, then Bootstrap JS
