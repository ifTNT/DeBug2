doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  script(src=' https://code.jquery.com/jquery-3.1.1.min.js')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  title #{title}
header(style='height: 100px;width:60%;;margin-left: 20%;margin-right: 20%;')
  .fixed-top.bg-dark(style='display:block;')
    nav.d-flex.justify-content-between.text-white(style='width:60%;height:100%;margin-left: 20%;margin-right: 20%;')
      // pt-3 pl-5 pr-5 mb-2
      h1(onclick="javascript:location.href='/'") DeBug2
section.pt-5(style='height: 100%;width:60%;margin-left: 20%;margin-right: 20%;text-align: center; ')
  p(style='color: gray;font-size:13px;')  Please input some information of article 
  form.pt-3(style='height: 100%;width:40%;;margin-left: 30%;margin-right: 30%;', id='ArticleForm')
    .form-group
      label(for='title') Title
      input#title.form-control(type='text'  value=title)
    .form-group
      label(for='type') Which type 
        .form-check.form-check-inline
          input#picture.form-check-input(type='radio' name='Options'  value='option1' checked)
          label.form-check-label(for='picture') Picture
        .form-check.form-check-inline
          input#plaintext.form-check-input(type='radio' name='Options' value='option2')
          label.form-check-label(for='plaintext') Plaintext
        .form-check.form-check-inline
          input#three_dimensional.form-check-input(type='radio' name='Options' value='option3')
          label.form-check-label(for='three_dimensional') 3D

    .form-group#display_pic(style="")
      label(for='pic_url') The url of Picture
      input#pic_url.form-control(type='text'  value=pic_url)

    .form-group#display_plaintext(style="display:none;")
      label(for='markdown') Markdown
      textarea#markdown.form-control(rows='5') 

    .form-group#display_3D(style="display:none;")
      label(for='model_url') The url of Model
      input#model_url.form-control(type='text'  value=model_url)

    //p#alert(style='display:none;color:red') This UserID has been used.
    button.btn.btn-primary.submit(type='submit') Submit
// Optional JavaScript
// jQuery first, then Popper.js, then Bootstrap JS
if create===true
  script(src='/JS/create_board.js' defer='')
else
  input#originalBoardName(type="hidden", value=board_name)
  script(src='/JS/create_article.js' defer='')
  
