  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  title User_info
header(style='height: 120px;width:60%;;margin-left: 20%;margin-right: 20%;')
  .fixed-top.bg-dark(style='display:block;')
    nav.d-flex.justify-content-between.text-white(style='width:60%;height:100%;margin-left: 20%;margin-right: 20%;')
      // pt-3 pl-5 pr-5 mb-2
      h1(onclick="javascript:location.href='Home'") DeBug2
section.pt-5(style='height: 100%;width:40%;;margin-left: 30%;margin-right: 30%; ')
  h3.mb-5(style='text-align: center;') Personal Information
  .d-flex.align-items-stretch.mb-5.ml-5
    .d-flex.flex-column.justify-content-center(style='width:50%')
      p.font-weight-bold UserID
      p.font-weight-bold Nickname
      p.font-weight-bold Join Time
      p.font-weight-bold Last active time
    .d-flex.flex-column.justify-content-center(style='width:50% ')
      p#user_id(style='display:none;')
      p#password(style='display:none;')
      p#join_time(style='display:none;')
      p#last_active_time(style='display:none;')
  .d-flex.justify-content-end
    button.btn.btn-outline-primary.mr-3.change(type='button') Change password
    button.btn.btn-outline-danger.delete(type='button') Delete account
